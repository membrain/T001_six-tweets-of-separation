# Adjust page content according to search type
case @response["type"]
  when "friends"
    page.replace_html "ResultContainer", :partial => "friends/show_friends", :object => @response
  when "degrees"
    page.replace_html "ResultContainer", :partial => "friends/show_degrees", :object => @response
  else
    page.replace_html "ResultContainer", ""
end

# focus cursor focus
page.call "app.setFocus"